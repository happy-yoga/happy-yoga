{
  "name": "happyyoga.de",
  "version": "0.0.1",
  "main": "index.js",
  "author": "Falk Hoppe <falkhoppe81@gmail.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "start": "node index.js",
    "watch:start": "nodemon --exec 'npm start' --ignore cypress",
    "test": "eslint .",
    "cypress:open": "cypress open",
    "prestyles": "npm run styles:clean && npm run styles:prepare",
    "styles": "stylus $npm_package_config_assets_src_directory/$npm_package_config_assets_styles_src_directory -o $npm_package_config_assets_tmp_directory/$npm_package_config_assets_styles_output_directory",
    "build:styles": "npm run styles",
    "poststyles": "postcss $npm_package_config_assets_tmp_directory/$npm_package_config_assets_styles_output_directory/*.css --use autoprefixer -d $npm_package_config_assets_output_directory/$npm_package_config_assets_styles_output_directory && echo 'postcss finished'",
    "styles:clean": "rm -rf $npm_package_config_assets_output_directory/$npm_package_config_assets_styles_output_directory $npm_package_config_assets_tmp_directory/$npm_package_config_assets_styles_output_directory",
    "styles:prepare": "mkdir -p $npm_package_config_assets_output_directory/$npm_package_config_assets_styles_output_directory $npm_package_config_assets_tmp_directory/$npm_package_config_assets_styles_output_directory",
    "watch:styles": "chokidar 'assets/styles/**/*' -c 'npm run styles'",
    "preimages": "echo 'clean and prepare images' && npm run images:clean && npm run images:prepare",
    "images": "echo 'start image optimization' && node image-build.js",
    "build:images": "npm run images",
    "images:clean": "rm -rf $npm_package_config_assets_output_directory/$npm_package_config_assets_images_output_directory",
    "images:prepare": "mkdir -p $npm_package_config_assets_output_directory/$npm_package_config_assets_images_output_directory",
    "watch:watch": "chokidar 'assets/images/*' -c 'npm run build:images'",
    "prejs": "npm run js:clean",
    "build:js": "npm run js:prepare && babel $npm_package_config_assets_src_directory/$npm_package_config_assets_js_src_directory/components --out-file $npm_package_config_assets_output_directory/$npm_package_config_assets_js_output_directory/components.js",
    "js:clean": "rm -rf $npm_package_config_assets_output_directory/$npm_package_config_assets_js_output_directory",
    "js:prepare": "mkdir -p $npm_package_config_assets_output_directory/$npm_package_config_assets_js_output_directory",
    "watch:js": "chokidar 'assets/javascripts/**/*' -c 'npm run build:js'",
    "build": "npm run build:styles && npm run build:js && npm run build:images",
    "compress:styles": "gzip $npm_package_config_assets_output_directory/$npm_package_config_assets_styles_output_directory/*.css --output=$npm_package_config_assets_output_directory/$npm_package_config_assets_styles_output_directory",
    "compress:js": "gzip $npm_package_config_assets_output_directory/$npm_package_config_assets_js_output_directory/*.js --output=$npm_package_config_assets_output_directory/$npm_package_config_assets_js_output_directory",
    "postbuild": "run-p compress:*",
    "prewatch": "npm run build",
    "watch": "run-p watch:*"
  },
  "config": {
    "assets": {
      "src_directory": "./assets",
      "output_directory": "./dist",
      "tmp_directory": "./tmp",
      "styles": {
        "src_directory": "./styles",
        "output_directory": "./styles"
      },
      "images": {
        "src_directory": "./images",
        "output_directory": "./images"
      },
      "js": {
        "src_directory": "./javascripts",
        "output_directory": "./javascripts"
      }
    }
  },
  "description": "",
  "dependencies": {
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "gzip-cli": "^0.1.3",
    "helmet": "^3.13.0",
    "i18next": "^11.6.0",
    "i18next-express-middleware": "^1.3.2",
    "i18next-node-fs-backend": "^2.0.0",
    "morgan": "^1.9.0",
    "pug": "^2.0.3",
    "slug": "^0.9.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.3",
    "babel-cli": "^6.26.0",
    "chokidar-cli": "^1.2.0",
    "david": "^11.0.0",
    "eslint": "^5.4.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^3.1.0",
    "imagemin": "^6.0.0",
    "imagemin-mozjpeg": "^7.0.0",
    "imagemin-pngquant": "^6.0.0",
    "imagemin-svgo": "^7.0.0",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "sharp": "^0.20.7",
    "stylus": "^0.54.5"
  }
}
