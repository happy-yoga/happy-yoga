content-area
  positioning-root()
  display block
  padding 5rem 2rem
  background-color #fff

  &.transparent
    background none
    background transparent

  &.full
    padding 0

  h2
    position absolute
    top 0
    right 0
    margin 0
    background-color #fff
    padding .3rem 30vw .3rem 1rem
    border-bottom 2px solid $bright-pink

  @media screen and (min-width: 600px)
    padding 5rem 5rem
