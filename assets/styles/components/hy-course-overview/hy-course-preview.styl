hy-course-preview
  positioning-root()
  display block
  background-color #fff
  padding .5rem 1rem
  margin-bottom 1rem

  a:link, a:visited, a:hover, a:active
    color $ft-color
    text-decoration none

  h4
    margin-top 0
    margin-bottom .5rem
    color $bright-pink
  p
    margin 0

  .time
    position absolute
    bottom .5rem
    right 1rem

  .description
    display none

  .course-preview-clone
    position fixed
    top 0
    right 0
    bottom 0
    left 100%
    transition left .3s cubic-bezier(1.000, -0.530, 0.405, 1.425)
    overflow-y scroll
    display block
    background-color #fff
    z-index 500

    .course-preview-clone-content
      display block
      padding 3rem
      min-height: 101vh

    .description
      display block
      margin-bottom 1rem

    &.visible
      left 0

    .time
      position static
      margin-top .5rem
      display block
      // text-align right
      font-weight bold
      margin-bottom 1rem

    button
      margin-top 2rem
      background-color $bright-pink
      border 0
      color #fff
      font-family 'Oswald', 'Helvetica Neue', Helvetica, Arial, sans-serif
      text-transform uppercase
      width 100%
      padding .3rem 1rem
      margin-bottom 50vh

