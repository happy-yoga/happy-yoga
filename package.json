{
  "name": "happyyoga.de",
  "version": "0.0.1",
  "main": "index.js",
  "author": "Falk Hoppe <falkhoppe81@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "start": "node index.js",
    "start:watch": "nodemon --exec 'npm start' --ignore cypress",
    "test": "echo 'enable \"cypress run\" to enable tests",
    "test:watch": "chokidar 'cypress/integration/*' -c 'npm run test -- --no-exit --port 3333'",
    "cypress:open": "cypress open",
    "styles": "npm run styles:clean && npm run styles:prepare && stylus $npm_package_config_assets_src_directory/$npm_package_config_assets_styles_src_directory -o $npm_package_config_assets_tmp_directory/$npm_package_config_assets_styles_output_directory",
    "poststyles": "postcss $npm_package_config_assets_tmp_directory/$npm_package_config_assets_styles_output_directory/*.css --use autoprefixer -d $npm_package_config_assets_output_directory/$npm_package_config_assets_styles_output_directory",
    "styles:clean": "rm -rf $npm_package_config_assets_output_directory/$npm_package_config_assets_styles_output_directory $npm_package_config_assets_tmp_directory/$npm_package_config_assets_styles_output_directory",
    "styles:prepare": "mkdir -p $npm_package_config_assets_output_directory/$npm_package_config_assets_styles_output_directory $npm_package_config_assets_tmp_directory/$npm_package_config_assets_styles_output_directory",
    "styles:watch": "chokidar 'assets/styles/**/*' -c 'npm run styles'",
    "images": "npm run images:clean && npm run images:prepare && npm run images:build",
    "images:build": "node image-build.js",
    "images:clean": "rm -rf $npm_package_config_assets_output_directory/$npm_package_config_assets_images_output_directory",
    "images:prepare": "mkdir -p $npm_package_config_assets_output_directory/$npm_package_config_assets_images_output_directory",
    "images:watch": "chokidar 'assets/images/*' -c 'npm run images'",
    "js": "npm run js:clean && npm run js:prepare && babel $npm_package_config_assets_src_directory/$npm_package_config_assets_js_src_directory/components --out-file $npm_package_config_assets_output_directory/$npm_package_config_assets_js_output_directory/components.js",
    "js:clean": "rm -rf $npm_package_config_assets_output_directory/$npm_package_config_assets_js_output_directory",
    "js:prepare": "mkdir -p $npm_package_config_assets_output_directory/$npm_package_config_assets_js_output_directory",
    "js:watch": "chokidar 'assets/javascripts/**/*' -c 'npm run js'",
    "build": "npm run styles && npm run images && npm run js",
    "watch": "run-p start:watch styles:watch images:watch js:watch",
    "postinstall": "npm run build"
  },
  "config": {
    "assets": {
      "src_directory": "./assets",
      "output_directory": "./dist",
      "tmp_directory": "./tmp",
      "styles": {
        "src_directory": "./styles",
        "output_directory": "./styles"
      },
      "images": {
        "src_directory": "./images",
        "output_directory": "./images"
      },
      "js": {
        "src_directory": "./javascripts",
        "output_directory": "./javascripts"
      }
    }
  },
  "description": "",
  "dependencies": {
    "autoprefixer": "^8.6.5",
    "babel-cli": "^6.26.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "helmet": "^3.12.1",
    "i18next": "^11.3.6",
    "i18next-express-middleware": "^1.2.0",
    "i18next-node-fs-backend": "^1.2.1",
    "imagemin": "^5.3.1",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-pngquant": "^5.1.0",
    "imagemin-svgo": "^6.0.0",
    "morgan": "^1.9.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^5.0.1",
    "pug": "^2.0.3",
    "sharp": "^0.20.5",
    "slug": "^0.9.1",
    "stylus": "^0.54.5"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "cypress": "^3.0.2",
    "eslint": "^5.0.1",
    "nodemon": "^1.17.5",
    "standard": "^11.0.1"
  }
}
