$price-category-border-radius = 5px
content-area.price-categories-wrapper
  background-color #e8e6e6
  padding 2rem
  padding-top 4rem

price-categories
  display block

  ul, li
    margin 0
    padding 0

price-category
  display inline-block
  margin-right .5rem
  border-radius $price-category-border-radius
  background-color #fff
  margin-bottom 1rem

  // @media screen and (max-width: 600px)
  min-width 320px
  width 100%


  header
    padding-top 2rem
    padding-bottom 2rem
    background-color #ff4ca5
    background: linear-gradient(to bottom, #FC3DC0 1%,#FF4CF0 100%)
    color #fff
    position relative
    border-radius $price-category-border-radius $price-category-border-radius 0 0
    overflow hidden

    &:before, &:after
      content ''
      display block
      width 100%
      position absolute
      bottom -1.5rem
      height 3rem
      border-radius 100%
      background-color #fff

    &:before
      left -50%
    &:after
      right -50%

    h3, p
      text-align center

    h3
      font-size 2rem
      font-weight 300
      margin-top 0
      margin-bottom 0

    p
      margin-top .3rem
      // color $dark-slate

  ul, li
    margin 0
    padding 0

  ul
    padding .5rem 0 1rem 0
    position relative

    &:before
      content '♥︎'
      // color #ff7ab8
      // color #A730EF
      color #fff
      position absolute
      top -1.2rem
      left 50%
      transform translateX(-50%)

  li
    display block
    border-bottom 1px solid #d8d5da
    // padding 1.5rem 5vw 1.5rem 5vw


    @media screen and (min-width: 800px)
      display inline !important



