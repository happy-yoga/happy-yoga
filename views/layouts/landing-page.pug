<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")
    //- meta(name="format-detection" content="telephone=no")
    meta(name = "viewport" content = "initial-scale = 1.0")
    title happyyoga.de
    link(href="https://fonts.googleapis.com/css?family=Lato:300,400,700|Oswald:600" rel="stylesheet")
    link(rel="stylesheet", href="/assets/styles/main.css")
    block head
      
  body
    include ../partials/main-nav
    block content
      
    script.
      //- touch active state
      document.addEventListener("touchstart", function(){}, true);
      
      $('a').on('touchstart', function(e){
        $('a').removeClass('tapped');
        $(this).addClass('tapped');
      });
       
      $('a').on('touchend', function(e){
          $(this).removeClass('tapped');
      });
      
      //- parallax
      var rellax = new Rellax('.rellax');

      //- smooth anchor scrolling
      document.addEventListener('DOMContentLoaded', () => {
        const scroller = new SweetScroll({
          trigger: 'a[href*="#"]',
          updateURL: true
        });
      }, false);
      
      
    
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.slim.js" defer)
    script(src="https://cdnjs.cloudflare.com/ajax/libs/rellax/1.6.2/rellax.js" defer)
      
    //- TODO: load polyfills only if needed
    script(src="https://cdn.jsdelivr.net/npm/document-register-element@1.10.0/build/document-register-element.js" defer)
    script(src="https://cdn.jsdelivr.net/npm/request-animation-frame-polyfill@0.1.3/index.min.js" defer)
    script(src="https://unpkg.com/sweet-scroll/sweet-scroll.min.js" defer)
    
    script(src="/assets/javascripts/components.js" defer)
